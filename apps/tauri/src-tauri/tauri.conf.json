{
  "$schema": "https://raw.githubusercontent.com/nicegui-org/nicegui/main/nicegui/static/tauri.conf.schema.json",
  "productName": "Arandu",
  "version": "0.2.0",
  "identifier": "com.devitools.arandu",
  "build": {
    "beforeDevCommand": "npm run dev:server",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Arandu",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "minWidth": 500,
        "minHeight": 400,
        "skipTaskbar": true,
        "visible": false
      },
      {
        "label": "recording",
        "title": "Recording",
        "url": "recording.html",
        "width": 600,
        "height": 160,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "transparent": true,
        "shadow": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libasound2"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "13.0",
      "entitlements": "./Entitlements.plist"
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "description": "Markdown Document",
        "contentTypes": ["text/markdown"]
      }
    ]
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "updater": {
      "endpoints": [
        "https://github.com/devitools/arandu/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY3NzBBMjNDRDRBQ0U4QjMKUldTejZLelVQS0p3WjliTlZPTFo3SkZNditaUktEblA3b2xMU3VsVEdHNklXRUVUeiswVkw3bE4K"
    }
  }
}
